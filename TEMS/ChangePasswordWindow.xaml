<Window x:Class="TEMS_Inventory.ChangePasswordWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TEMS_Inventory"
        mc:Ignorable="d"
        Title="Set New Password" Height="165.254" Width="300" WindowStartupLocation="CenterScreen"  FocusManager.FocusedElement="{Binding ElementName=passwordBox}" >
    <DockPanel>
        <StackPanel DockPanel.Dock="Bottom" Orientation="Horizontal" HorizontalAlignment="Center">
            <Button x:Name="SetPassword" Content="Change _Password" Margin="10" VerticalAlignment="Center" Width="100" Click="SetPassword_Click"/>
            <Button x:Name="Cancel" Content="_Cancel" Margin="10" VerticalAlignment="Center" Width="75" Click="Cancel_Click"  />
        </StackPanel>
        <Grid>
            <TextBox x:Name="passwordBox" HorizontalAlignment="Left" Height="23" Margin="39,50,0,0" TextWrapping="NoWrap" Text="" VerticalAlignment="Top" Width="120" />
            <Label x:Name="label" Content="Input new password:" HorizontalAlignment="Left" Margin="39,27,0,0" VerticalAlignment="Top"/>
        </Grid>
    </DockPanel>
</Window>
